<%= form_with(model: @order, remote: true) do |f| %>
    <% if @order.errors.any? %>
        <div id = 'error_explanation'>
            <h2 class= "text-danger font-weight-bold">Atención! Existe <%= pluralize(order.errors.count, "error") %> el cual no permite guardar el Venta</h2>
            <ul>
                <% @order.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <h3>Ingreso Venta</h3>

    <div class="form-group">
        <%= f.label :tipo %>
        <%= f.select :category, [:Licitacion, :Directa, :Indirecta, :Cooperativa], {}, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :observacion %>
        <%= f.text_area :description, placeholder: 'Ingrese una Descripción u Observación', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :cliente %>
        <br>
        <%= f.collection_select :client_id, @clients, :id, :name%>
    </div>

    <div class="form-group">
        <%= f.label :producto %>
        <br>
        <%= f.collection_select :product_id, @products, :id, :name%>
    </div>

    <div class="form-group">
        <%= f.label :"precio (Pesos)" %>
        <br>
        <%= f.text_field :price, class: "form-control"%>
    </div>

    <div class = 'actions'>
        <%= f.submit "Guardar Venta", class:'btn btn-success border-dark mb-2'%>
    </div>
<% end %>