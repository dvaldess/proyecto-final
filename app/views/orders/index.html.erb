<div class="mx-4" id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav btn-dark sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="">System</div>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x font-weight-bold" width="36" height="36" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <line x1="18" y1="6" x2="6" y2="18" />
                  <line x1="6" y1="6" x2="18" y2="18" />
                </svg>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0 mb-3">
            <!-- Nav Item - Dashboard -->
            <div class="sidebar-card d-none d-lg-flex">
                <%= link_to 'Dashbord', dashboard_index_path, class:'text-white'%>
            </div>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Nav Item - Pages Collapse Menu -->
            <div class="sidebar-card d-none d-lg-flex">
                <%= link_to 'Modulo Ventas', orders_path, class:'text-white' %>
            </div>
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <form
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input type="text" class="form-control bg-light border-0 small" placeholder="Buscar..."
                                aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                      <circle cx="10" cy="10" r="7" />
                                      <line x1="21" y1="21" x2="15" y2="15" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </form>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - User Information -->
                        <li class="nav-item mt-2">
                            Hola, <%= current_user.name%> <%= current_user.surname %>
                        </li>
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <li class="nav-item btn btn-danger border-dark">
                            <%= link_to 'Cerrar Sesion', destroy_user_session_path, method: :delete, class:'text-white' %>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="container">
                        <%= render 'orders/form' %>
                    </div>
                    <!-- Content Row -->
                    <div class="row">
                        <!-- Area -->
                        <div class="col-xl-12">
                            <h3 class="text-center">Listado de Ventas</h3>
                            <div class="card shadow mb-4">
                                <table id="myTable" class="table" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tipo</th>
                                            <th>Fecha</th>
                                            <th>Precio</th>
                                            <th>Cliente</th>
                                            <th>Producto</th>
                                            <th colspan="2">Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="orders">
                                        <% @orders.each do |o| %>
                                            <tr>
                                                <td><%= o.id %></td>
                                                <td><%= o.category %></td>
                                                <td><%= o.date %></td>
                                                <td><%= number_to_currency(o.price, unit: "$", precision: 0) %></td>
                                                <td><%= @clients.find(o.client_id).name %></td>
                                                <td>
                                                    <% if o.product_id != nil %>
                                                        <%= @products.find(o.product_id).name %>
                                                    <% end %>
                                                </td>
                                                <td>
                                                    <%= link_to edit_order_path(o) do %>
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                          <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                                                          <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                                                          <line x1="16" y1="5" x2="19" y2="8" />
                                                        </svg>
                                                    <% end %>
                                                </td>
                                                <td>
                                                    <%= link_to order_path(o), method: :delete, data: { confirm: 'Â¿Esta seguro que desea eliminar la venta?' } do %>
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                          <line x1="4" y1="7" x2="20" y2="7" />
                                                          <line x1="10" y1="11" x2="10" y2="17" />
                                                          <line x1="14" y1="11" x2="14" y2="17" />
                                                          <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                          <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                        </svg>
                                                    <% end %>
                                                </td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="bg-white">
                <div class="container">
                    <div class="copyright text-center">
                        <span>Copyright &copy; <%= Time.now.year %> SystemX. Todos los derechos reservados</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
</div>