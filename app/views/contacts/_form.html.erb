<%= form_with(model: @contact, remote: true) do |f| %>
    <% if @contact.errors.any? %>
        <div id = 'error_explanation'>
            <h2 class= "text-danger font-weight-bold">Atenci√≥n! Existe <%= pluralize(contact.errors.count, "error") %> el cual no permite guardar el Contacto</h2>
            <ul>
                <% @contact.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <h3 class="font-weight-bold pb-2">Ingrese Contacto</h3>
    <div class="form-group row">
        <div class="col">
            <%= f.label :nombre %>
            <%= f.text_field :name, autofocus: true, placeholder: 'Ingrese el nombre del Contacto', class: "form-control" %>
        </div>
        <div class="col">
            <%= f.label :email %>
            <%= f.text_field :email, placeholder: 'Ingrese el E-Mail del Contacto', class: "form-control" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <%= f.label :telefono %>
            <%= f.text_field :phone, placeholder: 'Ingrese el Telefono del Contacto', class: "form-control" %>
        </div>
        <div class="col">
            <%= f.label :cargo %>
            <%= f.select :title, [:"Gerente TI", :"SubGerente TI", :"Jefe TI", :"Ingeniero TI", :"Tecnico TI", :Administrativo, :Rector, :"Director de Carrera"], {}, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row">
        <%= f.label :empresa, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
                <%= f.collection_select :client_id, @clients, :id, :name, {}, class: "form-control"%>
        </div>
    </div>
    <div class='actions'>
        <%= f.submit "Guardar Contacto", class:'btn btn-success border-dark mt-1'%>
    </div>
<% end %>