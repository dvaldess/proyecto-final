<body class="bg-gradient-primary">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Inicie Sesión</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <%= f.label :email, class: "font-weight-bold"%><br />
                                            <%= f.email_field :email, autofocus: true, placeholder: 'Ingrese Email', class: "form-control form-control-user" %>
                                        </div>
                                        <div class="form-group">
                                            <%= f.label :password, class: "font-weight-bold"%><br />
                                            <%= f.password_field :password, placeholder: 'Ingrese Password', class:"form-control form-control-user"%>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                              <% if devise_mapping.rememberable? %>
                                                <%= f.check_box :remember_me, class: "form-check-input custom-control-input"%>
                                                <%= f.label :remember_me, class:"custom-control-label" %>
                                              <% end %>
                                            </div>
                                        </div>
                                          <div class="actions">
                                            <%= f.submit "Iniciar Sesión", class: "form-control btn btn-primary pb-4" %>
                                          </div>
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Inicia Sesión con GitHub
                                        </a>
                                    <hr>
                                    <div class="text-center">
                                        <%= render "devise/shared/links" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</body>