<body class="bg-gradient-primary">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Registro de Usuario</h1>
                            </div>
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.label :nombre, class: "font-weight-bold" %>
                                        <%= f.text_field :name, autofocus: true, placeholder: 'Ingrese su Nombre', class: "form-control" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.label :apellido, class: "font-weight-bold" %>
                                        <%= f.text_field :surname, placeholder: 'Ingrese su Apellido', class: "form-control" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                        <%= f.label :email, class: "font-weight-bold"%>
                                        <%= f.email_field :email, placeholder: 'Ingrese su Email', class: "form-control" %>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.label :celular, class: "font-weight-bold"%>
                                        <%= f.text_field :phone, autofocus: true, placeholder: 'Ingrese su Telefono', class: "form-control" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.label :cargo, class: "font-weight-bold"%>
                                        <%= f.select :title, [:"Gerente General", :"Gerente Comercial", :"SubGerente Comercial", :"Jefe Comercial", :"Ejecutivo de Ventas"], {}, class: "form-control" %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.label :password, class: "font-weight-bold"%>
                                        <%= f.password_field :password, placeholder: 'Minimo 6 caracteres', class: "form-control" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.label :"confirme password", class: "text-capitalize font-weight-bold"%>
                                        <%= f.password_field :password, placeholder: 'Repita Password', class: "form-control" %>
                                    </div>
                                </div>
                                <div class="actions">
                                  <%= f.submit "Registrarse", class: "form-control btn btn-primary pb-4" %>
                                </div>
                            </form>
                            <hr>
                            <div class="text-center">
                                <p class="mt-3">Â¿Ya tienes una cuenta?<%= render "devise/shared/links" %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</body>