<div class="box-central-2 row justify-content-md-center">
    <div class="col-md-auto box-3 p-4">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <h4 class="text-center font-weight-bold">
                --><%= current_user.name%> <%= current_user.surname %><--
            </h4>
            <p class="text-center font-weight-bold">
                 <%= current_user.title %>
            </p>
            <p>
              <strong>Email:</strong>
                 <%= current_user.email %>
            </p>
            <p>
              <strong>Celular:</strong>
                 <%= current_user.phone %>
            </p>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class="field">
                <%= f.label :"Ingrese Password", class: "font-weight-bold" %> <i>(Dejar en blanco si no necesita cambiar)</i><br />
                <%= f.password_field :password, class: "form-control" %>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> Caracteres minimo</em>
                <% end %>
              </div>
              <div class="field">
                <%= f.label :"Confirmar Password", class: "font-weight-bold"  %> <i>(Dejar en blanco si no necesita cambiar)</i><br />
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
              <div class="form-group">
                    <%= f.label :"actualice celular", class: "font-weight-bold" %>
                    <%= f.text_field :phone, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :password_actual, class: "font-weight-bold" %> <i>(Necesitas ingresar tu password para actualizar el celular)</i><br />
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "Actualizar Datos", class: "form-control btn btn-primary pb-4" %>
              </div>
            <% end %>
                <%= link_to "Volver al Inicio", :back, class: "form-control btn btn-success mt-3" %>
    </div>
</div>